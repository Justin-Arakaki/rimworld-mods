<?xml version="1.0" encoding="utf-8"?>
<Patch>

		<!-- Berrymaker -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Dryad_Berrymaker"]/comps/li/spawnCount</xpath>
			<value>
					<spawnCount>100</spawnCount>
			</value>
		</Operation>

		<!-- Medicinemaker -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Dryad_Medicinemaker"]/comps/li/spawnCount</xpath>
			<value>
					<spawnCount>6</spawnCount>
			</value>
		</Operation>

		<!-- Woodmaker -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Dryad_Woodmaker"]/comps/li/spawnCount</xpath>
			<value>
					<spawnCount>120</spawnCount>
			</value>
		</Operation>

		<!-- Carrier -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Dryad_Carrier"]/statBases/MoveSpeed</xpath>
			<value>
					<MoveSpeed>2.9</MoveSpeed>
			</value>
		</Operation>
		<Operation Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Dryad_Carrier"]/race</xpath>
			<value>
					<baseBodySize>1.3</baseBodySize>
			</value>
		</Operation>

		<!-- Barkskin -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Dryad_Barkskin"]/race/baseHealthScale</xpath>
			<value>
					<baseHealthScale>1.6</baseHealthScale>
			</value>
		</Operation>

		<!-- Cocoon Time -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "DryadCocoon"]/comps/li/daysToComplete</xpath>
			<value>
					<daysToComplete>2</daysToComplete>
			</value>
		</Operation>
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "DryadHealingPod"]/comps/li/daysToComplete</xpath>
			<value>
					<daysToComplete>2</daysToComplete>
			</value>
		</Operation>

		<!-- Connection Decay -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Plant_TreeGauranlen"]/comps/li[3]/connectionLossPerLevelCurve/points/li[2]</xpath>
			<value>
					<li>(0.001, 0.015)</li>
			</value>
		</Operation>
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Plant_TreeGauranlen"]/comps/li[3]/connectionLossPerLevelCurve/points/li[3]</xpath>
			<value>
					<li>(0.33, 0.03)</li>
			</value>
		</Operation>
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Plant_TreeGauranlen"]/comps/li[3]/connectionLossPerLevelCurve/points/li[4]</xpath>
			<value>
					<li>(0.66, 0.045)</li>
			</value>
		</Operation>

		<!-- Spawn Time -->
		<Operation Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName = "Plant_TreeGauranlen"]/comps/li[3]/spawnDays</xpath>
			<value>
					<spawnDays>4</spawnDays>
			</value>
		</Operation>

</Patch>
